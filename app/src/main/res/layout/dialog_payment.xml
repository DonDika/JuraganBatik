<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="260dp"
        android:padding="10dp"
        android:background="@color/white"
        app:cardCornerRadius="14dp"
        style="?attr/materialCardViewElevatedStyle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:textSize="24sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/totalStock"
                />

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginEnd="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTotalPrice"
                app:layout_constraintTop_toTopOf="@+id/tvTotalPrice"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="30000" />


            <TextView
                android:id="@+id/tvTotalStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah/mÂ²"
                android:textSize="24sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />


            <TextView
                android:id="@+id/totalStock"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="1"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTotalStock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvTotalStock"
                app:layout_constraintTop_toTopOf="@+id/tvTotalStock" />

            <Button
                android:id="@+id/plusButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/add_circle_icon"
                app:iconSize="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/totalStock"
                app:layout_constraintStart_toEndOf="@+id/totalStock"
                app:layout_constraintTop_toTopOf="@+id/totalStock" />

            <Button
                android:id="@+id/minusButton"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:icon="@drawable/remove_circle_icon"
                app:iconSize="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/totalStock"
                app:layout_constraintEnd_toStartOf="@+id/totalStock"
                app:layout_constraintTop_toTopOf="@+id/totalStock" />

            <Button
                android:id="@+id/button_pay"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:text="Bayar"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/totalPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>